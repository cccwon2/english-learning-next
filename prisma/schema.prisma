generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

model Profile {
  id            String         @id @default(uuid())
  user_id       String         @unique
  name          String?
  grade         Int?
  class         Int?
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  conversations Conversation[]

  @@map("profiles")
  @@schema("public")
}

model Conversation {
  id              Int                      @id @default(autoincrement())
  message         String
  created_at      DateTime                 @default(now())
  is_user_message Boolean
  user_id         String
  translation     ConversationTranslation?
  profile         Profile                  @relation(fields: [user_id], references: [user_id])

  @@map("conversations")
  @@schema("public")
}

model ConversationTranslation {
  id                  Int          @id @default(autoincrement())
  response            String?
  language            String?
  conversation_id     Int          @unique
  translated_message  String?
  translated_response String?
  conversation        Conversation @relation(fields: [conversation_id], references: [id])

  @@map("conversation_translations")
  @@schema("public")
}
